FROM node:20-alpine

ARG COMPOSE_NAME
ARG COMPOSE_SERVICES
ARG COMPOSE_MAX_SCALE

ENV COMPOSE_NAME ${COMPOSE_NAME}
ENV COMPOSE_SERVICES ${COMPOSE_SERVICES}
ENV COMPOSE_MAX_SCALE ${COMPOSE_MAX_SCALE}

WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install
COPY . .
EXPOSE 3000
CMD [ "npm", "start" ]